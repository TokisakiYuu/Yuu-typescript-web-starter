extends base.pug
include ./neon-sign

block style
    +importCss("/styles/home.css")

block content
    #app
        #logo.panel
            +neonSign()
        #list.panel
            .panel-content
                each item in articleList
                    a.article-item.hover-highlight(href=`/article/${item.id}`)
                        .article-id
                            span
                                em= "#" + tools.fillZero(String(item.id), 3)
                        .article-title
                            h3= item.title

block footer
    #footer
        p#hitokoto "温暖的灵魂终将相遇"
        p= "Designed & Powerd by "
            a(href="mailto:tokisakiyuu@qq.com?subject=from%20blog") TokisakiYuu
        p 
            a(href="http://beian.miit.gov.cn/") 蜀ICP备18021334号

block script
    +importScript("/home.bundle.js")