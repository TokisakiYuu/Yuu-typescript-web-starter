{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "inlineSourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": ["node_modules/*"]
      },
      "alwaysStrict": true,
      "strict": true,
      "checkJs": true,
      "allowJs": true,
      "diagnostics": true,
      "declaration": true,
  },
  "include": [
      "src/**/*"
  ]
}