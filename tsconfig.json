{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "outDir": "dist",
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],
        "alwaysStrict": true,
        "strict": true,
        "checkJs": true,
        "allowJs": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "removeComments": true,
    },
    "include": [
        "./src/",
        "./types"
    ]
  }